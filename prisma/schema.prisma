generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data.db"
}

model User {
  id       Int      @id @default(autoincrement())
  fullname String
  image    String?
  email    String   @unique
  password String
  role     Boolean? @default(false)
  reviews  Review[]
}

model Book {
  id            Int        @id @default(autoincrement())
  title         String
  description   String
  image         String
  publishedYear String
  price         String
  stock         Int
  discountPrice String?
  reviews       Review[]
  author        Author?    @relation(fields: [authorId], references: [id])
  authorId      Int?
  category      Category[]
}

model Category {
  id    Int    @id @default(autoincrement())
  title String
  book  Book[]
}

model Author {
  id       Int    @id @default(autoincrement())
  fullname String @unique
  image    String
  books    Book[]
}

model Review {
  id      Int     @id @default(autoincrement())
  stars   Int?
  comment String?
  user    User?   @relation(fields: [userId], references: [id])
  userId  Int?
  book    Book?   @relation(fields: [bookId], references: [id])
  bookId  Int?
}
